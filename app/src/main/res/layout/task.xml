<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintVertical_chainStyle="spread">

        <EditText
            android:id="@+id/task_title"
            android:layout_width="342dp"
            android:layout_height="49dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Task Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/task_date_created"
            android:layout_width="100dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:text="Date Created"
            app:layout_constraintBottom_toBottomOf="@+id/task_title"
            app:layout_constraintEnd_toEndOf="@+id/task_title"
            app:layout_constraintTop_toTopOf="@+id/task_title"
            app:layout_constraintVertical_bias="0.09" />

        <EditText
            android:id="@+id/task_description"
            android:layout_width="281dp"
            android:layout_height="78dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Task Description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/task_location" />

        <EditText
            android:id="@+id/task_due_date"
            android:layout_width="63dp"
            android:layout_height="34dp"
            android:ems="10"
            android:inputType="date"
            android:text="02/05/2020"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/task_description"
            app:layout_constraintTop_toBottomOf="@+id/task_location" />

        <TextView
            android:id="@+id/task_location"
            android:layout_width="342dp"
            android:layout_height="21dp"
            android:layout_marginStart="8dp"
            android:text="Location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/task_title" />

        <ImageButton
            android:id="@+id/task_delete"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/task_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.186"
            app:srcCompat="@drawable/ic_delete_forever_black_24dp" />

        <TextView
            android:id="@+id/task_status"
            android:layout_width="64dp"
            android:layout_height="37dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/task_description"
            app:layout_constraintTop_toBottomOf="@+id/task_due_date"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>